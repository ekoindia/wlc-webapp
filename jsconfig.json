{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"test-utils": ["./__tests__/test-utils/test-utils"],
			"components": ["./components"],
			"features": ["./features"],
			"constants": ["./constants"],
			"contexts": ["./contexts"],
			"hooks": ["./hooks"],
			"components/*": ["./components/*"],
			"features/*": ["./features/*"],
			"constants/*": ["./constants/*"],
			"context/*": ["./context/*"],
			"hooks/*": ["./hooks/*"],
			"public/*": ["./public/*"]
		}
	},
	"include": ["**/*.js", "**/*.jsx"],
	"exclude": [
		"node_modules",
		".next",
		".swc",
		".vscode",
		"coverage",
		"plop-templates",
		"public",
		"stories",
		"styles"
	]
}
